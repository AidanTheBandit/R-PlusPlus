{
  "name": "r-api",
  "version": "1.0.0",
  "description": "Interface with your R1 remotely via wss and a rest api",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "build-creation": "cd creation-react && npm install && npm run build",
    "dev-creation": "cd creation-react && npm run dev",
    "build-control-panel": "cd r1-control-panel && npm install && npm run build",
    "dev-control-panel": "cd r1-control-panel && npm start",
    "build-all": "npm run build-creation && npm run build-control-panel",
    "all": "npm run build-all && npm start",
    "check-builds": "node scripts/check-builds.js",
    "test-blacklist": "node scripts/test-blacklist.js",
    "test-server": "node scripts/test-server.js",
    "test-mcp": "node scripts/test-mcp-prompt-injection.js",
    "test-mcp-remote": "node scripts/test-mcp-remote.js",
    "test-mcp-comprehensive": "node scripts/test-mcp-comprehensive.js",
    "test": "npm run test-blacklist && npm run test-server && npm run test-mcp && npm run test-mcp-remote && npm run test-mcp-comprehensive",
    "virtual-r1": "node virtual-r1.js",
    "test-virtual-r1": "node test-virtual-r1.js"
  },
  "keywords": [
    "r1",
    "api",
    "websocket",
    "openai",
    "creation"
  ],
  "author": "AidanTheBandit",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@vitejs/plugin-react": "^4.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "pm2": "^5.3.0",
    "r1-create": "^1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.6",
    "twilio": "^5.3.0",
    "vite": "^6.3.6",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  }
}
